<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SportChoice"
    android:background="#000"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SPORTSMATRIX"
        android:textColor="#fff"
        android:textSize="24dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/nbalogo"
            android:onClick="NBASimGame"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/nbalogo"
            android:onClick="NBASimSeason"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/nbalogo"
            android:onClick="NBALiveTourn"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/nbalogo"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Sim Game"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Sim Season"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Live Tourn"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Live Game"
            android:textColor="#fff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:src="@drawable/mlblogo"
            android:onClick="MLBSimGame"
            />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:src="@drawable/mlblogo"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="#fff"
            android:text="Sim Game" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="#fff"
            android:text="Live Tourn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/nfllogo"
            android:layout_marginTop="50dp"
            android:onClick="NFLSimGame"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#fff"
            android:text="Sim Game"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Leagues"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Account"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Store"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="About"/>

    </LinearLayout>
</LinearLayout><!--   159 -->